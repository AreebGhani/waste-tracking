{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "types": [
    "node",
    "jest",
    "@testing-library/jest-dom"
  ],
  "include": [
    "**/*.ts",
    "**/*.js",
    "**/*.tsx",
    "**/*.d.ts",
    "**/*.config.js",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "eslint.config.js",
    ".prettierrc"
  ]
}
